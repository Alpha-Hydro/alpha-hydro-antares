<ul class="sidebar_menu crop-bottom-shadow">
    <?php if($this->current_category):?>
        <li class="current-item"><a href=""><i class="fa fa-level-up fa-fw"></i><?=$this->current_category->name?></a></li>
    <?php endif;?>
    <?php foreach ($this->entries as $entry): ?>
        <li class="item">
